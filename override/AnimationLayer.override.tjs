//				dm("drawNoise("+noiseMonocro+", "+noiseUnder+", "+noiseUpper+", "+tick+", "+l+", "+t+", "+w+", "+h+") / "+clipLeft+", "+clipTop+", "+clipWidth+", "+clipHeight);
