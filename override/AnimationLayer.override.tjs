		var ret = true;
		if( children.count )
		{
			for( var i=0; i<children.count; i++ )
			{
				if( typeof children[i].checkPhaseChildLayers == "undefined" )
					continue;
				if( ! children[i].checkPhaseChildLayers() )
				{
					ret = false;
