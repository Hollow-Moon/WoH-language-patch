				//	規定の処理を行なう
				param.rgamma = ef[0]; param.rfloor = ef[1]; param.rceil = ef[2];
				param.ggamma = ef[3]; param.gfloor = ef[4]; param.gceil = ef[5];
				param.bgamma = ef[6]; param.bfloor = ef[7]; param.bceil = ef[8];
				param.grayscale	= ef[9];
