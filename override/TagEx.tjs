			}
			else
			{
				throw new Exception("trans: トランジション対象のレイヤーが特定できませんでした。");
				return 0;
			}

			//	対象のレイヤーがトランジション中なら、トランジションを終了させる
			lay.stopTransition();
			lay.comp.stopTransition() if typeof lay.comp != "undefined" && lay.comp != void;

			//	トランジション対象の強制描画
			if(lay == kag.back.base)
				lay.forcePaint();
