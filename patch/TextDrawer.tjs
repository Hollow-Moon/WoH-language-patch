				}
				layer.drawText(currentX, y, character, settings.color, settings.opacity,,settings.shadowOpacity, settings.shadowColor, settings.shadowWidth, settings.shadowOffsetX, settings.shadowOffsetY);
				currentX += layer.font.getTextWidth(character) + settings.letterSpace;
			}
		} else {
			if (settings.glow) {
				layer.drawText(x, y, text, settings.glowColor, settings.glowOpacity,, settings.glowStrength, settings.glowColor, settings.glowSize, 0, 0);
			}
			layer.drawText(x, y, text, settings.color, settings.opacity,,settings.shadowOpacity, settings.shadowColor, settings.shadowWidth, settings.shadowOffsetX, settings.shadowOffsetY);
		}
	}

