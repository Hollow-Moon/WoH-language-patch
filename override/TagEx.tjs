		 *		@group:		レイヤ操作
		 */
		.orgtag_trans	= .trans;
		.trans	= function(mp)
		{
@if(CLICKSKIP_NEXT_EFFECT)
			//	演出開始前のクリック待ちする
			if(clickWaitIfNextEffect && canIgnoreL())
			{
				conductor.pendings.insert(0, mp);
