		var	ef		= getLayerEffect();
		if(ef != void || brightness != 0 || contrast != 0 || blur != "0x0" ||
@if(USE_GAMMA)
		gamma != 1 ||
@endif
		noise)
			addImage(1);
		else
		{
			removeImage(1);
			_image	= _orgimage;
