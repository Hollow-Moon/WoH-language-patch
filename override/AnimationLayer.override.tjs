			{
@if(!DRAW_DIVIDELAYERS)
				var	pos	= calcDrawPos(mx, my);
				setClip(maxHorizontalMargin, maxVerticalMargin, global.KAGLayer.imageWidth - (maxHorizontalMargin << 1), global.KAGLayer.imageHeight - (maxVerticalMargin << 1));
